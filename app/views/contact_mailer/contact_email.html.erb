<div class="email-container">
  <h2 class="email-title">Vous avez re√ßu une nouvelle demande de contact</h2>
  <%= simple_form_for @contact, url: contacts_url do |f| %>
    <div class="mt-3 label-input-container">
      <%= f.label :name, "Nom" %>
      <%= f.text_field :name, class: "form-control custom-input custom-rounded" %>
    </div>
    <div class="mt-3 label-input-container">
      <%= f.label :email, "Email" %>
      <%= f.email_field :email, class: "form-control custom-input custom-rounded" %>
    </div>
    <!-- Autres champs du formulaire ici -->
    <div class="mt-3 label-input-container">
      <%= f.label :message, "Message" %>
      <%= f.text_area :message, class: "form-control custom-input custom-rounded" %>
    </div>
  <% end %>
</div>
