<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
     <%= simple_form_for @contact, url: contacts_path do |f| %>
        <div class="mb-3">
          <%= f.label :name, "Nom" %>
          <%= f.text_field :name, class: "form-control custom-rounded" %>
        </div>
        <div class="mb-3">
          <%= f.label :email, "Email" %>
          <%= f.email_field :email, placeholder:"votreemail@email.com", class: "form-control custom-rounded" %>
        </div>
        <div class="mb-3">
          <%= f.label :message, "Message" %>
          <%= f.text_area :message, placeholder:"DÃ©crivez votre super projet de site web ou votre besoin" ,class: "form-control custom-rounded" %>
        </div>
        <div class="mb-3">
          <%= f.submit "Envoyer", class: "btn btn-success rounded-pill" %>
        </div>
      <% end %>
    </div>
  </div>


</div>
